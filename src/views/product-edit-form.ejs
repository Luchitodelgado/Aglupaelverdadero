<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

    <body>
        <%- include('partials/headerNavbar') %>
            <main>
                <div class="container products-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="products-title">Estás editando: <i>
                                    <img src="../../img/<%= product.image %>">
                                    <% console.log(product.image)%>

                                    <%= product.name %>
                                </i></h2>
                        </div>
                    </div>
                    <div class="col-12">
                        <form action="/productos/edit/<%= product.id %>?_method=PATCH" method="POST"
                            enctype="multipart/form-data">
                            <div class="row product-detail">
                                <div class="col-12 col-md-6">
                                    <label for="name" class="form-label">Nombre del producto:</label>
                                    <input type="text" value="<%= product.name %>" id="name" name="name"
                                        placeholder="Ej: Zapatillas Reebok" class="form-input">
                                </div>
                                <div class="col-12 col-md-6">
                                    <label for="price" class="form-label">Precio del producto:</label>
                                    <input type="number" value="<%= product.price %>" id="price" name="price"
                                        placeholder="<%= product.price %>" class="form-input">
                                </div>
                                <div class="col-12 col-md-6">
                                    <label for="discount" class="form-label">Descuento:</label>
                                    <input type="number" value="<%= product.discount %>" id="discount" name="discount"
                                        placeholder="Ej: 15" class="form-input">
                                </div>
                                <div class="col-12 col-md-6">
                                    <label for="category" class="form-label">Categoría:</label>
                                    <select name="category" id="category" class="form-input">
                                        <option value="">Elegí</option>
                                        <option value="productos">Texanas</option>
                                        <option value="borcegos">Borcegos</option>
                                        <option value="botas">Botas</option>
                                        <option value="zapatillas">Zapatillas</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="description" class="form-label">Descipción:</label>
                                    <textarea name="description" id="description"
                                        class="form-input"><%= product.description %></textarea>
                                </div>

                                <div class="contenedor-input">
                                    <label>Foto del producto:</label>
                                    <br>
                                    <input type="file" value="<%= product.image %>" required name="fotoProducto">
                                </div>

                                <div class="col-12">
                                    <button type="submit" class="buy-now-button">Guardar producto</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>


            </main>
            <%- include('partials/footer') %>
    </body>

</html>