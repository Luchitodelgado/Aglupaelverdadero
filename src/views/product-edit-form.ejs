<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

    <body>
        <%- include('partials/headerNavbar') %>
            <main>
                <div class="container-edit">
                    <div class="div-img-edit">
                        <img class="img-edit" src="../../img/<%= product.image %>">
                        <% console.log(product.image)%>
                    </div>
                    <div class="div-info-edit">
                        <p class="titulo-edit">ESTÁS EDITANDO:</p>
                        <form action="/productos/edit/<%= product.id %>?_method=PATCH" method="POST"
                            enctype="multipart/form-data">
                            <p class="name-edit">
                                <label for="name" class="form-label">Nombre del producto:</label>
                                <input type="text" value="<%= product.name %>" id="name" name="name"
                                    placeholder="Ej: Zapatillas Lucía" class="name-edit">
                            </p>
                            <p class="price-edit">
                                <label for="price" class="form-label">Precio del producto:</label>
                                <input type="number" value="<%= product.price %>" id="price" name="price"
                                    placeholder="<%= product.price %>" class="price-edit">
                            </p>
                            <p class="discount-edit">
                                <label for="discount" class="form-label">Descuento:</label>
                                <input type="number" value="<%= product.discount %>" id="discount" name="discount"
                                    placeholder="Ej: 15%" class="discount-edit">
                            </p>
                            <p class="category-edit">
                                <label for="category" class="form-label">Categoría:</label>
                                <select name="category" id="category" class="category-edit">
                                    <option value="">Elige una</option>
                                    <option value="productos">Texanas</option>
                                    <option value="borcegos">Borcegos</option>
                                    <option value="botas">Botas</option>
                                    <option value="zapatillas">Zapatillas</option>
                                </select>
                            </p>
                            <p class="description-edit">
                                <label for="description" class="form-label">Descipción:</label>
                                <textarea name="description" id="description"
                                    class="description-edit"><%= product.description %></textarea>
                            </p>
                            <p class="foto-edit">
                                <label>Foto del producto:</label>
                                <input type="file" value="<%= product.image %>" required name="fotoProducto">
                            </p>
                            <div>
                                <button type="submit" class="button-edit">GUARDAR</button>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
            <%- include('partials/footer') %>
    </body>

</html>