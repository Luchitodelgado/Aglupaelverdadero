<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>


	<body>
		<%- include('partials/headerNavbar') %>
			<main>
				<div class="container-detail">
					<div class="div-img-detail">
						<img class="img-detail" src="/img/<%= product.image %>" alt="product image">
					</div>
					<div class="div-info-detail">
						<p class="name-detail">
							<%= product.name %>
						</p>
						<p class="description-detail">
							<%= product.description %>
						</p>
						<p class="description-detail">
							Stock del producto: <%= product.stock %>
						</p>
						<% if(product.discount> 0){
							let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0)
							%>
							<p class="price-detail">$<%= finalPrice %>
							</p>
							<% } else { %>
								<%= product.price %>
									<% } %>
										<p class="icons-detail">
											<i class="fas fa-credit-card"></i>
											HASTA 12 CUOTAS SIN INTERÃ‰S
										</p>
										<p class="icons-detail">
											<i class="fas fa-store"></i>
											RETIRO GRATIS EN NUESTROS LOCALES
										</p>
										<a class="detailComprar" href="#">COMPRAR</a>

										<% if (locals.userAdmin===true) {%>
											<a class="detailEditar" href="/productos/edit/<%= product.id %>">EDITAR</a>

											<form action="/productos/delete/<%= product.id %>?_method=DELETE"
												method="POST" style="display: inline-flex" class="detailEliminar">
												<button type="submit">ELIMINAR</button>
											</form>
											<% }%>

					</div>
				</div>
			</main>
			<%- include('partials/footer') %>
	</body>

</html>