                                <img src="/img/<%= product.image %>" alt="imagen de producto">
                            </figure>
                            <article class="">
                                <p><%= product.name %></p>
                                <p class="descrip"><%= product.description %></p>
                                <p class="descrip"><%= product.price %></p>
                                <i class="fas fa-truck"></i> <div class="">
						<button type="submit" class="buy-now-button">Comprar</button> </div>
                            </article>
                        </a>
                    </section>
                </div>
            <% }) %>
            </div>
        </div>
    <%- include('partials/footer') %>
