<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head') %>

    
<body>

    <%- include('partials/headerNavbar') %>


    <div class="columnas">
        <div class="">
            <div class="">
                <h2 class="">Texanas</h2>
            </div>
            <% productos.forEach(function(product){ 
                let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0)
            %>
